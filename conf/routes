
GET         /feed                controllers.Default.redirect(to = "/feed/1")
GET         /feed/:page          controllers.ArticleFeedController.index(page: Int)

GET         /post                controllers.PostArticleController.index
POST        /post                controllers.PostArticleController.submitArticle

GET         /article/:articleId  controllers.ArticleDetailController.index(articleId: Int)
POST        /article/:articleId  controllers.ArticleDetailController.submitComment(articleId: Int)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)



# Catchall route

GET         /                    controllers.Default.redirect(to = "/feed")